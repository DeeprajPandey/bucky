extends layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h2
      i.fas.fa-upload.fa-sm
      | File Upload

  h3 File Upload Form
  .row
    .col-md-6
      p All files will be uploaded to "/uploads" directory.
      form(action='http://bucky_video_repo.storage.googleapis.com', method='post', enctype='multipart/form-data')
        .form-group
          input(type="hidden", name="key", value="${filename}")
          input(type='hidden', name='success_action_status', value='201')
          label.col-form-label.font-weight-bold File Input
          .col-md-6
            input(type='file', name='file')
        button.btn.btn-primary(type='submit') Extract
